##
## Dependencies
##

dep $(DEPEND) depend:
ifeq ($(DEPENDENCIES),)
else
	$(ECHO) "    ---- Analysing dependencies for $(DEPENDENCIES)"
	$(SILENT) $(CXX) -M $(CXXFLAGS) $(INCLUDES) $(DEPENDENCIES)  | \
	$(AWK) '{if (index($$0,".o:") > 0) printf "$(OBJ_DIR)/"; print $0}' \
	> $(DEPEND)
endif

ifeq ($(DEPEND), $(wildcard $(DEPEND)))
include $(DEPEND)
endif
